<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true"
    app:shimmer_duration="1200"
    app:shimmer_base_alpha="0.7"
    app:shimmer_highlight_alpha="0.9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="100dp">

        <!-- Profile Card Skeleton -->
        <androidx.cardview.widget.CardView
            android:id="@+id/skeletonProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Avatar skeleton -->
                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_skeleton_circle" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="100dp"
                            android:layout_height="12dp"
                            android:background="@drawable/bg_skeleton_light" />

                        <View
                            android:layout_width="150dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_skeleton_light" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bg_skeleton_light" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:alpha="0.3"
                    android:background="@color/text_white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:background="@drawable/bg_skeleton_light" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_skeleton_light" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- App Status Card Skeleton -->
        <androidx.cardview.widget.CardView
            android:id="@+id/skeletonStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skeletonProfile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="14dp"
                    android:background="@drawable/bg_skeleton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <!-- Login Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="60dp"
                            android:layout_height="24dp"
                            android:background="@drawable/bg_skeleton" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bg_skeleton" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/divider" />

                    <!-- Web Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="60dp"
                            android:layout_height="24dp"
                            android:background="@drawable/bg_skeleton" />

                        <View
                            android:layout_width="70dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bg_skeleton" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Today Classes Title Skeleton -->
        <View
            android:id="@+id/skeletonTitle"
            android:layout_width="140dp"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skeletonStatus" />

        <!-- Schedule Card Skeleton 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/skeletonCard1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skeletonTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="4dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_skeleton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <View
                        android:layout_width="180dp"
                        android:layout_height="14dp"
                        android:background="@drawable/bg_skeleton" />

                    <View
                        android:layout_width="130dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_skeleton" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Schedule Card Skeleton 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/skeletonCard2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skeletonCard1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="4dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_skeleton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <View
                        android:layout_width="160dp"
                        android:layout_height="14dp"
                        android:background="@drawable/bg_skeleton" />

                    <View
                        android:layout_width="110dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_skeleton" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
