<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/card_background">

    <!-- Main Row (clickable to expand) -->
    <LinearLayout
        android:id="@+id/rowMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            tools:text="1" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_status_badge"
            android:backgroundTint="@color/status_success"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:textColor="@color/text_white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="HADIR" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            tools:text="2025-09-22" />

        <TextView
            android:id="@+id/tvPtm"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            tools:text="1" />

        <ImageView
            android:id="@+id/ivExpand"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_expand_more"
            android:contentDescription="@string/enlarge"
            app:tint="@color/text_secondary"
            xmlns:app="http://schemas.android.com/apk/res-auto" />
    </LinearLayout>

    <!-- Expandable Content -->
    <LinearLayout
        android:id="@+id/expandableContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone">

        <!-- Rangkuman -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rangkuman"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRangkuman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textIsSelectable="true"
            android:textSize="14sp"
            tools:text="Pengantar Keamanan dan Penjaminan Informasi" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Berita Acara -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/berita_acara"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBeritaAcara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textIsSelectable="true"
            android:textSize="14sp"
            tools:text="Membahas tentang Konsep dan prinsip dasar informasi\n• Mempelajari dasar-dasar bidang keamanan.\n• Mempelajari tentang Informasi keamanan dan komponen keamanan informasi dan aspek keamanan\n• Mempelajari tentang Prinsip Manajemen Keamanan Informasi dan Istilah keamanan" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

</LinearLayout>
