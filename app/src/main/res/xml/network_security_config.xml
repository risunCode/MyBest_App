<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust BSI E-Learning server - allow both HTTP and HTTPS -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">elearning.bsi.ac.id</domain>
        <domain includeSubdomains="true">bsi.ac.id</domain>
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system" />
            <!-- Also trust user-installed CAs (for debugging) -->
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- Default config for other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
